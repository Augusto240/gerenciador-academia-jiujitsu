<header>
    <h1>Editar Aluno: <%= @aluno['nome'] %></h1>
</header>

<section class="form-section">
    <form action="/alunos/<%= @aluno['id'] %>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      
      <label for="nome">Nome Completo:</label>
      <input type="text" id="nome" name="nome" value="<%= @aluno['nome'] %>" required>
      
      <label for="cor_faixa">Cor da Faixa:</label>
      <input type="text" id="cor_faixa" name="cor_faixa" value="<%= @aluno['cor_faixa'] %>">
      
      <label for="data_nascimento">Data de Nascimento:</label>
      <input type="date" id="data_nascimento" name="data_nascimento" value="<%= @aluno['data_nascimento'].strftime('%Y-%m-%d') %>" required>
      
      <label for="turma">Turma:</label>
      <input type="text" id="turma" name="turma" value="<%= @aluno['turma'] %>">
      
      <button type="submit">Salvar Alterações</button>
      <a href="/" class="btn-cancelar">Cancelar</a>
    </form>
</section>